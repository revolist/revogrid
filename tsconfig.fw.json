{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true,
    "strictNullChecks": false,
    "importHelpers": true,
    "isolatedModules": true
  },
  "include": ["src", "*.d.ts"],
  "exclude": ["node_modules"]
}
